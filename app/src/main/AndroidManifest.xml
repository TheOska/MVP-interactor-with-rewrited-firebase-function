<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="theoska.com.mvpfirebasechat">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.chat.view.ChatScreenActivity"
            android:parentActivityName=".ui.login.view.LoginActivity" />
        <activity
            android:name=".ui.registration.view.RegisterActivity"
            android:parentActivityName=".ui.main.view.MainActivity" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:parentActivityName=".ui.main.view.MainActivity" />
    </application>

</manifest>